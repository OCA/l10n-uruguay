<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- As this addon is generic we don't include this file in __openerp__.py
             because in current project (La Isla) is already included.
             Anyway, this inclusion wouldn't be necessary because USD would
             already be the secundary currency -->
        <record id="view_currency_form" model="ir.ui.view">
            <field name="name">res.currency.form</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form" />
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="alt_currency" groups="base.group_multi_currency"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
