<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report
            id="stock_picking_report_def"
            string="Remito de entrega"
            model="stock.picking"
            report_type="qweb-pdf"
            file="stock_picking_report_pdf"
            name="grp_stock.stock_picking_report_tmpl"
        />

        <template id="stock_picking_report_tmpl">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.internal_layout">
                        <div class="page">
                            <table id="t00">
                                <tr>
                                    <td style="width: 10%;">
                                        <img t-att-src="'data:image/png;base64,%s' % res_company.logo"
                                             style="max-height: 100px;"/>
                                    </td>
                                    <td style="font-size:150%;width: 50%;text-align:center;">
                                        <strong>Remito de entrega</strong>
                                        <br></br>
                                    </td>
                                    <td style="font-size:75%;text-align:center;width: 20%">
                                        <!--<strong t-usertime="%d/%m/%Y %H:%M:%S"/>-->
                                    </td>
                                </tr>
                            </table>
                            <br></br>
                            <br></br>

                            <table width="800px">
                                <tr>
                                    <td width="200px"><p><b>N° solicitud de recurso: </b></p></td>
                                    <td width="200px"><span t-field="o.origin"/></td>
                                    <td width="200px"><p><b>Solicitante: </b></p></td>
                                    <td width="200px"><span t-field="o.doc_origin.sr_id.solicitante_id.name"/></td>
                                </tr>
                                <tr>
                                    <td width="200px"><p><b>Aprobado por:</b></p></td>
                                    <td width="200px"><span t-field="o.doc_origin.aprobador_id.name"/></td>
                                    <td width="200px"><p><b>Unidad: </b></p></td>
                                    <td width="200px"><span t-field="o.doc_origin.department_id.name"/></td>
                                </tr>
                                <tr>
                                    <!--<td width="200px"><p><b>Fecha aprobación SR:</b></p></td>-->
                                    <!--<td width="200px"><span t-field="o.doc_origin.sr_id.date_start"/></td>-->
                                    <td width="200px"><p><b>Nro Interno: </b></p></td>
                                    <td width="200px"><span t-field="o.solicitante_id.phone"/></td>
                                </tr>
                            </table>
                            <p>
                            </p>
                            <p>
                            </p>
                            <table width="800px">
                              <tr>
                                <td width="20px"></td>
                                <td width="780px" style="text-align: left;">
                                  <p><b>ORDEN DE ENTREGA : </b></p>
                                    <span t-field="o.name"/>
                                </td>
                              </tr>
                            </table>
                            <p>
                            </p>
                            <table width="800px" height="18px" style="border: 1px solid #cccccc;border-collapse: collapse;">
                              <tr style="border: 1px solid #cccccc;">
                                <td style="border: 1px solid #cccccc;" width="200px">
                                  <p><b>Almacén</b></p>
                                </td>
                                <td style="border: 1px solid #cccccc;" width="200px">
                                  <p><b>Responsables de almacén</b></p>
                                </td>
                                <td style="border: 1px solid #cccccc;" width="200px">
                                  <p><b>Fecha de entrega</b></p>
                                </td>
                                <td style="border: 1px solid #cccccc;" width="200px">
                                  <p><b>Estado</b></p>
                                </td>
                              </tr>
                            </table>
                            <table width="800px" height="18px" style="border: 1px solid #cccccc;border-collapse: collapse;">
                              <tr style="border: 1px solid #cccccc;">
                                <td width="200px" style="border: 1px solid #cccccc;">
                                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                                </td>
                                <td width="200px" style="border: 1px solid #cccccc;">
                                    <t t-foreach="o.picking_type_id.warehouse_id.encargado_ids"
                                       t-as="encargado">
                                        <t t-esc="encargado.name"/>
                                        <t t-esc="' '"/>
                                    </t>
                                    <!--<t t-esc="user.name"/>-->
                                    <!--<t t-if="usuario">-->
                                        <!--<t t-esc="usuario"/>-->
                                    <!--</t>-->
                                    <!--<t t-if="not usuario and o.picking_id.doc_origin.warehouse.encargado_id">-->
                                        <!--<t t-esc="o.picking_id.doc_origin.warehouse.encargado_id.name"/>-->
                                    <!--</t>-->
                                </td>
                                <td width="200px" style="border: 1px solid #cccccc;">
                                    <span t-field="o.date_done"/>
                                </td>
                                <td width="200px" style="border: 1px solid #cccccc;">
                                    <span t-field="o.state"/>
                                </td>
                              </tr>
                            </table>
                            <p>
                            </p>
                            <table width="800px" style="border: 1px solid;">
                              <tr style="border: 1px solid;">
                                <td width="150px" style="border: 1px solid;">
                                  <p><b>Producto</b></p>
                                </td>
                                <td width="130px" style="border: 1px solid;">
                                  <p><b>Descripción</b></p>
                                </td>
                                <td width="130px" style="border: 1px solid;">
                                  <p><b>Cantidad solicitada</b></p>
                                </td>
                                <td width="130px" style="border: 1px solid;">
                                  <p><b>Estado</b></p>
                                </td>
                                <td width="130px" style="border: 1px solid;">
                                  <p><b>Ubicación</b></p>
                                </td>
                                <td width="130px" style="border: 1px solid;">
                                  <p><b>Cantidad entregada</b></p>
                                </td>
                              </tr>

                            <p/>
                             <t t-foreach="o.move_lines" t-as="move_lines">
                                <tr>
                                  <td width="150px" style="border: 1px solid;">
                                      <span t-field="move_lines.product_id"/>
                                  </td>
                                  <td width="130px" style="border: 1px solid;">
                                      <span t-field="move_lines.name"/>
                                  </td>
                                  <td width="130px" style="border: 1px solid;">
                                      <span t-field="move_lines.cantidad_solicitada"/>
                                  </td>
                                  <td width="130px" style="border: 1px solid;">
                                      <span t-field="move_lines.state"/>
                                  </td>
                                  <td width="130px" style="border: 1px solid;">
                                      <t t-if="move_lines.location_id">
                                          <span t-field="move_lines.location_id.name"/>
                                      </t>
                                  </td>
                                  <td width="130px" style="border: 1px solid;">
                                      <span t-field="move_lines.product_qty"/>

                                      <span t-field="move_lines.product_uom.name"/>
                                  </td>
                                </tr>
                                </t>
                                </table>
                            <p>
                            </p>
                             <table width="500px">
                              <tr>
                                <td width="250px">
                                 <p><b>Descripción:</b></p>
                                 <!--<t t-esc="o.note"/>-->
                                 <t t-esc="o.doc_origin.description"/>
                                </td>
                                <td width="250px"></td>
                              </tr>
                            </table>

                           <p>
                           </p>
                            <br></br>
                            <br></br>
                            <table width="530px">
                              <tr>
                                <td width="40px"></td>
                                <td width="160px">
                                  <p>_______________________________</p>
                                </td>
                                <td width="130px"></td>
                                <td width="200px"></td>
                              </tr>
                              <tr>
                                <td width="40px"></td>
                                <td width="160px">
                                  <p><p>Recibido</p></p>
                                </td>
                                <td width="130px"></td>
                                <td width="200px">
                                </td>
                              </tr>
                              <tr>
                                <td width="40px"></td>
                                <td width="160px">
                                </td>
                                <td width="130px"></td>
                                <td width="200px">
                                <!--<p>Impreso: </p>-->
                                <!--<t t-usertime="%d/%m/%Y %H:%M:%S"></t>-->
                                </td>
                              </tr>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
